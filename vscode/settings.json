{
    /* Theme */
    "workbench.colorTheme": "Hyper Term Black",
    "workbench.preferredDarkColorTheme": "Hyper Term Black",
    /* GUI Customizations */
    "workbench.sideBar.location": "right",
    "editor.mouseWheelZoom": true,
    "editor.minimap.enabled": true,
    "editor.minimap.showSlider": "always",
    "editor.minimap.renderCharacters": true,
    "editor.minimap.maxColumn": 125,
    "editor.minimap.scale": 1,
    "editor.minimap.size": "fill",
    "editor.minimap.autohide": false,
    "editor.minimap.side": "right",
    /* Theme Settings */
    "editor.cursorStyle": "line",
    "editor.cursorBlinking": "solid",
    "editor.cursorSmoothCaretAnimation": "explicit",
    "editor.cursorWidth": 1,
    /* Fonts */
    "editor.fontFamily": "'Comic Code Ligatures'",
    /* Fonts - Common */
    "editor.inlayHints.fontFamily": "'Comic Code Ligatures'",
    "scm.inputFontFamily": "'Comic Code Ligatures'",
    "debug.console.fontFamily": "'Comic Code Ligatures'",
    "editor.codeLensFontFamily": "'Comic Code Ligatures'",
    "notebook.output.fontFamily": "'Comic Code Ligatures'",
    "markdown.preview.fontFamily": "'Comic Code Ligatures'",
    "chat.editor.fontFamily": "'Comic Code Ligatures'",
    /* Fonts - Terminal */
    "terminal.integrated.fontFamily": "'ComicShannsMono Nerd Font Mono'",
    /* Fonts Editor Settings */
    "editor.fontLigatures": true,
    "editor.fontVariations": true,
    /* Fonts Size */
    "terminal.integrated.fontSize": 12,
    "chat.editor.fontSize": 12,
    "markdown.preview.fontSize": 12,
    "scm.inputFontSize": 12,
    "debug.console.fontSize": 12,
    "editor.fontSize": 12,
